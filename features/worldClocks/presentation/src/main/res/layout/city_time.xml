<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Milano"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintBottom_toTopOf="@+id/city_country"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/city_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Italy"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/city_name"
        app:layout_constraintTop_toBottomOf="@+id/city_name" />

    <ImageButton
        android:id="@+id/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="null"
        android:format24Hour="HH:mm"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textSize="42sp"
        android:textColor="@color/pink_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/options_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16:03" />

    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="#12000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/city_country"
        app:layout_constraintEnd_toStartOf="@id/options_button"
        app:layout_constraintStart_toStartOf="@id/city_country" />

</androidx.constraintlayout.widget.ConstraintLayout>